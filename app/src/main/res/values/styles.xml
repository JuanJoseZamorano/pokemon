<resources>
    <!-- Tema principal de la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_primario</item>
        <item name="colorSecondary">@color/color_secundario</item>
        <item name="android:colorBackground">@color/color_fondo</item>
        <item name="android:textColorPrimary">@color/color_texto_primario</item>
        <item name="android:textColorSecondary">@color/color_texto_secundario</item>
        <item name="android:buttonStyle">@style/BotonPokemon</item>
    </style>

    <!-- Estilo para botones al estilo Pokémon -->
    <style name="BotonPokemon" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/color_boton</item>
        <item name="android:textColor">@color/color_texto_boton</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Estilo para TextViews principales -->
    <style name="TextoPrincipal">
        <item name="android:textColor">@color/color_texto_primario</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para TextViews secundarios -->
    <style name="TextoSecundario">
        <item name="android:textColor">@color/color_texto_secundario</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo para los CardViews -->
    <style name="CardViewPokemon" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">44dp</item>
        <item name="cardElevation">7dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>


